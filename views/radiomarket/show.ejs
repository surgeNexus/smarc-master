<% include ../partials/header %>
<div class="page-center">
<div class="container">
    <div class="row">
        <div class="col-md-12 form-media">
            <div class="thumbnail">
                <div class="container form-media">
                    <div class="col-md-1"></div>
                    <div class="col-md-9 thumbnail">
                            <img class="img-responsive" src="<%= campground.image %>">
                    </div>
                </div>
                <div class="caption-full">
                    <h4 class="pull-right">Asking Price $<%= campground.price %></h4>
                    <h4><a><%=campground.name%></a></h4>
                    <p><%= campground.description %></p>
                    <p>
                        <em>Submitted By: <%= campground.author.username %>,
                        <%= moment(campground.createdAt).fromNow() %></em>
                    </p>
                    <% if(currentUser && currentUser.isAdmin === true || currentUser && campground.author.id.equals(currentUser._id)){ %>
                        <a class="btn btn-xs btn-warning" href="/radiomarket/<%= campground._id %>/edit">Edit</a>
                        <form id="delete-form" action="/radiomarket/<%= campground._id %>?_method=DELETE" method="POST">
                            <button onclick="return ConfirmDelete()" class="btn btn-xs btn-danger">Delete</button>
                        </form>
                    <% }%>
                </div>
            </div>
            <div class="well">
                <% campground.comments.forEach(function(comment){ %>
                <div class="row">
                    <div class="col-md-12">
                        <strong><%= comment.author.username.toUpperCase() %></strong>
                        <span class="pull-right"><%= moment(comment.createdAt).fromNow() %></span>
                        <div>
                            <p>
                                <%= comment.text %> 
                            </p>
                        </div>
                        
                    <% if(currentUser && currentUser._id.equals(comment.author.id) || currentUser && currentUser.isAdmin === true){ %>
                        <a class="btn btn-xs btn-warning" href="/radiomarket/<%=campground._id %>/comments/<%=comment._id %>/edit">Edit</a>
                        <form id="delete-form" action="/radiomarket/<%= campground._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
                            <input onclick="return ConfirmDelete()" type="submit" class="btn btn-xs btn-danger" value="Delete">
                        </form>
                    <% } %>
                        <hr>
                    </div>
                </div>
                <% }) %>
                <form action="/radiomarket/<%= campground._id %>/comments" method="POST">
                    <div>
                        <h5>Comment</h5>
                        <textarea class="form-control" type="text" name="text"></textarea>
                        <button class="btn btn-sm btn-primary" type="submit">Send</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
</div>
<script>
    function ConfirmDelete()
    {
      var x = confirm("Are you sure you wish to delete this?");
      if (x)
          return true;
      else
        return false;
    }
</script>    
<% include ../partials/footer %>
<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit Meeting Log</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/info/minutes/minutescollection/<%= foundMinutes._id %>?_method=PUT" method="POST">
                <div class="form-group">
                        <input class="form-control" type="text" name="date" value="<%= foundMinutes.date %>">
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" type="text" name="minutes" rows="4" cols="50"><%= foundMinutes.minutes %></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit</button>
                    </div>
            </form>
            <form id="delete-form" action="/info/minutes/minutescollection/<%= foundMinutes.id %>?_method=DELETE" method="POST">
                <input onclick="return ConfirmDelete()" type="submit" class="btn btn-xs btn-danger" value="Delete">
            </form>
            <a href="/info/minutes/">Go Back</a>
        </div>
    </div>
</div>
<script>
    function ConfirmDelete()
    {
      var x = confirm("Are you sure you wish to delete this?");
      if (x)
          return true;
      else
        return false;
    }
</script>    
<% include ../partials/footer %>

            <h4 class="modal-title text-center" id="exampleModalLabel">Register for SMARC Online</h4>
            <!-- User Register Form -->
            <div class="container mt-3">
                <div class="row">
                    <div class="">
                        <form action="/register" method="POST" class="" encType="multipart/form-data" id="regForm">
                            <div class="row">
                                <div class="input-group col-xs-4">
                                    <label class="input-group-text">First Name</label>
                                    <input class="form-control" type="text" name="firstName" required>
                                </div>
                                <div class="input-group col-xs-4 mt-1">
                                    <label class="input-group-text">Last Name</label>
                                    <input class="form-control" type="text" name="lastName" required>
                                </div>
                                <div class="input-group col-xs-4 mt-1">
                                    <label class="input-group-text">Callsign</label>
                                    <input class="form-control" class="" oninput="this.value=this.value.toLowerCase()" type="text" name="username" required>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-group col-xs-6 mt-1">
                                    <label class="input-group-text">Email</label>
                                    <input class="form-control" type="email" name="email" required>
                                </div>
                                <div class="input-group col-xs-6 mt-1">
                                    <label class="input-group-text">Phone</label>
                                    <input class="form-control" type="tel" name="phone">
                                </div>
                            </div>
                            <br>
                            <div class="row">
                                <div class="input-group col-xs-6 mt-1">
                                    <label class="input-group-text">Address</label>
                                    <input class="form-control" type="text" name="address">
                                </div>
                                <div class="input-group col-xs-6 mt-1">
                                    <label class="input-group-text">City, State, Zip</label>
                                    <input class="form-control" type="text" name="ctStZip">
                                </div>
                            </div>
                            <div class="input-group mt-1">
                              <label class="input-group-text">ARRL Member?</label>
                              <select name="arrl" class="form-control" required>
                                <option value="true">Yes</option>
                                <option value="false">No</option>
                              </select>
                            </div>
                            <div class="row mt-1">
                                <div class="input-group col-xs-6">
                                    <label class="input-group-text">Password</label>
                                    <input class="form-control" type="password" name="password" minlength="6" equired>
                                </div>
                                <div class="input-group col-xs-6">
                                    <label class="input-group-text">Password</label>
                                    <input class="form-control" type="password" name="password2" minlength="6" required>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-12">
                                    <h4>Profile Image</h4>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs=12 col-md-offset-4">
                                    <input type="file" class="form-control" name="profileImage">
                                </div>
                            </div>
                            <br>
                            <div>
                              <input type="checkbox" value="true" name="tos" required> I accept the <a target="_blank" href="/files/pdf/TOS.pdf">terms of service</a>
                            </div>
                            <br>
                            <div class="input-group mb-5">
                              <input class="btn btn-primary btn-md g-recaptcha"  data-sitekey="6Le--7YZAAAAAJ_y6Pe06qusO5-MxR6Oxaqi743z" data-callback='onSubmit' data-action='submit' onclick="return ConfirmSubmit()" class="btn btn-primary" type="submit" value="Submit">
                            </div>
                        </form>
                    </div>

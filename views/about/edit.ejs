<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit Document</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/about/aboutcollection/<%= foundAbout._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    Meeting Location URL
                    <input class="form-control" type="text" name="meeting" value="<%= foundAbout.meeting %>">
                </div>
                <div class="form-group">
                    Field Day Location URL
                    <input class="form-control" type="text" name="fieldDay" value="<%= foundAbout.fieldDay %>">
                </div>
                <div class="form-group">
                    <h5>VE Testing Dates</h5>
                    <textarea class="form-control" type="text" name="test" rows="4" cols="50"><%= foundAbout.test %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <form id="delete-form" action="/about/aboutcollection/<%= foundAbout.id %>?_method=DELETE" method="POST">
                <input type="submit" class="btn btn-xs btn-danger" value="Delete">
            </form>
            <a href="/about/">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

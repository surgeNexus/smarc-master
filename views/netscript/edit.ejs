<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit NCS</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/info/netscript/netscriptcollection/<%= foundNet._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="date" name="date" value="<%= foundNet.date %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="date" name="date" value="<%= foundNet.date %>">
                </div>
                <div class="form-group">
                    <select name="ncs">
                            <option name="ncs" value="<%= foundNet.ncs %>"><%= foundNet.ncs.username %></option>
                            <% user.forEach(function(usr){ %>
                                <option name="ncs" value="<%= usr.id %>"><%= usr.username %></option>
                            <% }) %>
                    </select>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <form id="delete-form" action="/info/netscript/netscriptcollection/<%= foundNet.id %>?_method=DELETE" method="POST">
                <input type="submit" class="btn btn-xs btn-danger" value="Delete">
            </form>
            <a href="/info/netscript/">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit NCS</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/info/netscript/netscriptcollection/<%= foundNet._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="date" name="date" value="<%= foundNet.date %>">
                </div>
                <div class="form-group">
                    <select name="ncst">
                            <% user.forEach(function(usr){ %>
                                <% if(usr.ncs === true){ %>
                                    <option name="ncst" value="<%= usr.id %>"><%= usr.username %></option>
                                <% } %>
                            <% }) %>
                    </select>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <form id="delete-form" action="/info/netscript/netscriptcollection/<%= foundNet.id %>?_method=DELETE" method="POST">
                <input onclick="return ConfirmDelete()" type="submit" class="btn btn-xs btn-danger" value="Delete">
            </form>
            <a href="/info/netscript/">Go Back</a>
        </div>
    </div>
</div>
<script>
    function ConfirmDelete()
    {
      var x = confirm("Are you sure you wish to delete this?");
      if (x)
          return true;
      else
        return false;
    }
</script>    
<% include ../partials/footer %>

<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">New NCS</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/info/netscript/" method="POST">
                <div class="form-group">
                    <input class="form-control" type="date" name="date">
                </div>
                <div class="form-group">
                    <select name="ncs">
                        <% user.forEach(function(option){ %>
                            <% if(option.ncs === true) { %>
                                <option name="ncs" value="<%= option.id %>"><%= option.username %></option>
                            <% } %>
                        <% }) %>
                    </select>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/info/netscript/">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

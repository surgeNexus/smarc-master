<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit Comment</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/radiomarket/<%= campground_id %>/comments/<%=comment._id %>?_method=PUT" method="POST">
                <div>
                    <textarea class="form-control" type="text" name="comment[text]" rows="4" cols="50"><%= comment.text %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/radiomarket">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

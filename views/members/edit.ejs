<% include ../partials/header %>
    

<div class="container">
    <div class="row">
        <div class="col-md-12 form-center">
            <h1><%= user.username %>'s Info</h1>
            <form action="/members/<%= user.id %>?_method=PUT" method="POST" encType="multipart/form-data">
                <div class="form-group">
                    <h4>First Name</h4>
                    <input type="text" name="firstName" value="<%= user.firstName %>">
                </div>
                <div class="form-group">
                    <h4>Last Name</h4>
                    <input type="text" name="lastName" value="<%= user.lastName %>">
                </div>
                <div class="form-group">
                    <h4>Call Sign</h4>
                    <input type="text" name="callsign" value="<%= user.username %>">
                </div>
                <div class="form-group">
                    <h4>Phone</h4>
                    <input type="text" name="phone" value="<%= user.phone %>">
                </div>
                <div class="form-group">
                    <h4>Email</h4>
                    <input type="text" name="email" value="<%= user.email %>">
                </div>
                <div class="form-group">
                    <h4>Mailing Address</h4>
                    <input type="text" name="address" value="<%= user.address %>">
                </div>
                <div class="form-group">
                    <h4>City, State, Zip Code</h4>
                    <input type="text" name="ctyStZip" value="<%= user.ctyStZip %>">
                </div>
                <div class="form-group">
                    <h4>ARRL Member</h4>
                    <input type="radio" name="arrl" required="required" value="true" <% if(user.arrl === true){ %> checked <% } %>> Yes 
                    <input type="radio" name="arrl" required="required" value="false" <% if(user.arrl === false){ %> checked <% } %>> No 
                </div>
                <br>
                <div class="form-group">
                    <h4>About Me</h4>
                    <h5>You may use HTML5</h5>
                    <textarea class="form-control" type="text" name="about" rows="20" cols="100"><%= user.aboutMe %></textarea>
                </div>
                <div class="form-center">
                    <h4>Profile Image</h4>
                    <div class="container">
                        <img class="usr-img form-center" src="<%= user.profileImage %>">
                    </div>
                    <input class="" type="file" name="doc">
                </div>
                <div class="form-group">
                    <input class="btn btn-primary" type="submit">
                </div>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>
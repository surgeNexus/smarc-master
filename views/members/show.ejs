<% include ../partials/header %>

<div class="container mt-3 mb-3">
    <div class="row form-media">
        <div class="col-md-4 col-sm-6">
            <div class="card">
                <div class="card-header">
                    <h1 class="text-center"><%= user.firstName%> <%= user.lastName %></h1>
                    <h2 class="text-center"><%= user.username.toUpperCase() %></h2>
                </div>
                <div class="d-flex justify-content-center">
                    <img class="img-fluid" src="<%= user.profileImage %>" alt="">
                </div>
                <% if(user.isAdmin === true) { %>
                <div class="">
                    <p><span class="glyphicon glyphicon-asterisk inline">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" style="color: gold;" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
                            <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                        </svg>
                    </span> <%= user.username.toUpperCase() %> is a SMARC Web Admin</p>
                </div>
                <% } %>
                <% if(user.isMember === true) { %>
                <div class="">
                    <p><span class="glyphicon glyphicon-asterisk inline">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" style="color: gold;" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
                            <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                          </svg>
                    </span> <%= user.username.toUpperCase() %> is a verified SMARC member</p>
                </div>
                <% } %>
                <% if(user.isElmer === true) { %>
                    <div class="">
                        <p><span class="glyphicon glyphicon-asterisk inline">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" style="color: gold;" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
                                <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                              </svg>
                        </span> <%= user.username.toUpperCase() %> is an Elmer</p>
                    </div>
                    <% } %>
                <% if(user.ncs === true) { %>
                <div class="">
                    <p><span class="glyphicon glyphicon-asterisk inline">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" style="color: gold;" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
                            <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                          </svg>
                    </span> <%= user.username.toUpperCase() %> is a SMARC Net Control Station</p>
                </div>
                <% } %>
                <% if(user.arrl === true) { %>
                <div class="">
                    <p><span class="glyphicon glyphicon-asterisk inline">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" style="color: gold;" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
                            <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                          </svg>
                    </span> <%= user.username.toUpperCase() %> is an ARRL member</p>
                </div>
                <% } %>
                <% if(currentUser && currentUser.isMember === true){ %>
                <div class="card-footer">
                    <h4>Contact Information</h4>
                    <% if(user.email){ %>
                    <div>
                        Email: <a href="mailto:<%= user.email %>"><%= user.email %></a>
                    </div>
                    <% } %>
                    <% if(user.phone){ %>
                    <div>
                        Phone: <a href="tel:<%= user.phone %>"><%= user.phone %></a>
                    </div>
                    <% } %>
                    <% if(user.address){ %>
                    <div>
                    <br>
                        <div>
                            <p>Mailing Address:</p>
                        </div>
                        <div>
                            <p><%= user.address %></p>
                        </div>
                        <div>
                            <p><%= user.ctyStZip %></p>
                        </div>
                    </div>
                    <% } %>
                    <% if(user.id === currentUser.id || currentUser.isAdmin === true) { %>
                    <div class="text-center">
                        <br>
                        <a href="/members/<%= user.id %>/edit" class="glyphicon glyphicon-pencil">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
                            </svg>
                        </a>
                    </div>
                    <% } %>
                </div>
                <% } %>
            </div>
        </div>
        <div class="col-md-8">
            <h1 class="text-center">About <%= user.username.toUpperCase() %></h1>
            <br>
            <div>
                <p><%- user.aboutMe %></p>
            </div>
            
        </div>
    </div>
</div>

<% include ../partials/footer %>
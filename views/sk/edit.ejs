<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">New Silent Key</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/info/sk/skcollection/<%= foundSk._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" value="<%= foundSk.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="callsign" value="<%= foundSk.callsign %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <form id="delete-form" action="/info/sk/skcollection/<%= foundSk.id %>?_method=DELETE" method="POST">
                <button onclick="return ConfirmDelete()" id="delete" type="submit" class="btn btn-xs btn-danger">Delete</button>
            </form>
            <a href="/info/sk/">Go Back</a>
        </div>
    </div>
</div>
<script>
    function ConfirmDelete()
    {
      var x = confirm("Are you sure you wish to delete this?");
      if (x)
          return true;
      else
        return false;
    }
</script>    
<% include ../partials/footer %>

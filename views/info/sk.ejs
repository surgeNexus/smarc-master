<% include ../partials/header %>

<div class="page-center">
    <div class="container">
    <div class="row form-media">
        <div class=col-md-12>
            <% if(!currentUser){ %>
            <% } else if(currentUser.isAdmin === true && currentUser.showAdmin === true) { %>
                <a class="btn btn-primary btn-sm" href="/info/sk/skcollection/new">New SK</a>
            <% } else { %>
            <% } %>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <h1 class="title-center">Silent Key Memorial</h1>
                <hr>
            </div>
        </div>
        <div class="form-media">
            <div class="row text-center" style="display:flex; flex-wrap: wrap;">
                <% foundSk.reverse().forEach(function(sk){ %>
                <div class="col-md-3 col-sm-6">
                    <div class="thumbnail">
                       <div class="caption">
                           <h4><%= sk.name %></h4>
                           <h5><%= sk.callsign %></h5>
                       </div>
                       <% if(!currentUser){ %>
                <% } else if(currentUser.isAdmin === true && currentUser.showAdmin === true) { %>
                    <a href="/info/sk/skcollection/<%= sk._id %>" class="glyphicon glyphicon-pencil"></a>
                <% } else { %>
                <% } %>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>
<% include ../partials/header %>
    <div class="container mt-3 mb-3">
        <div class="row">
            <div class="col-md-12">
                <% if(currentUser && currentUser.isAdmin === true && currentUser.showAdmin === true){ %>
                    <a class="btn btn-primary btn-sm" href="/info/officers/officerscollection/new">New Officer</a>
                    <hr>
                <% } %>
            </div>
        </div>
        <div class="row text-center">
        <% foundOfficers.forEach(function(officer){ %>
            <div class="col-md-4 mb-4">
                <div class="card shadow-lg card-full-height">
                   <div class="caption">
                        <div class="card-header">
                            <h3><%= officer.title %></h3>
                            <% if(currentUser && currentUser.isAdmin === true && currentUser.showAdmin === true){ %>
                            <a class="glyphicon glyphicon-pencil" href="/info/officers/officerscollection/<%= officer._id %>">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                    <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
                                </svg>
                            </a>
                            <% } %>
                        </div>
                        <div class="card-body">
                            <img class="rounded img-fluid" src="<%= officer.pictureLoc %>">
                        </div>
                        <div class="card-footer">
                            <h4><%= officer.name %></h4>
                            <h4><%= officer.callsign %></h4>
                        </div>
                   </div>
                </div>
            </div>
        <% }); %>
        </div>
    </div>

<% include ../partials/footer %>

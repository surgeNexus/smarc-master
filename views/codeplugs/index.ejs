<% include ../partials/header %>

<div class="page-center">
<div class="container">
    <h1 class="text-center">Codeplugs</h1>
    <div class="row">
        <div class=col-md-12>
          <% if(currentUser && currentUser.isAdmin === true && currentUser.showAdmin === true) { %>
              <div class="foot-room">
                <a class="btn btn-primary" role="button" data-toggle="collapse" href="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                  New Codeplug
                </a>
                <div class="collapse" id="collapseExample">
                  <div class="container">
                    <div class="row">
                        <h1 style="text-align: center">New Codeplug</h1>
                        <div style="width: 30%; margin: 25px auto;">
                            <form action="/codeplugs" method="POST" encType="multipart/form-data">
                                <div class="form-group">
                                    <input class="form-control" type="text" name="title" placeholder="Radio Specs">
                                </div>
                                <div class="form-group">
                                    <input class="form-control" type="date" name="date" placeholder="Date">
                                </div>
                                <div class="form-group">
                                    <input class="form-control" type="file" name="doc">
                                </div>
                                <div class="form-group">
                                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                                </div>
                            </form>
                            <a href="/codeplugs/">Go Back</a>
                        </div>
                    </div>
                  </div>
                </div>
              </div>
          <% } %>
        </div>
      </div>
      <div class="form-media">
        <div class="row text-center" style="display:flex; flex-wrap: wrap;">
           <% foundCodeplugs.reverse().forEach(function(cps){ %>
               <div class="col-md-3 col-sm-6">
                   <div class="thumbnail">
                      <div class="caption">
                        <h4><%= cps.title %></h4>
                        <h5><%= cps.date %></h5>
                        <div>
                          <a class="btn btn-md btn-primary" href="<%= cps.docLoc %>" download="<%= cps.title %>">Download</a>
                        </div>
                      </div>
                      <% if(currentUser && currentUser.isAdmin === true && currentUser.showAdmin === true) { %>
                          <a href="/codeplugs/codeplugscollection/<%= cps._id %>" class="glyphicon glyphicon-pencil"></a>
                      <% } %>
                   </div>
               </div>
           <% }) %>
       </div>
     </div>
   </div>
</div>
<% include ../partials/footer %>
